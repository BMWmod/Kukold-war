{game_entity
	(include "/properties/armoredcar.ext")
	(include "/properties/shadow/tank.inc"  scale(1.0))
	(include "/properties/selection/vehicle.inc"  scale(1.1))
	{collider "truck"}
	{props "vehicle" "car" "windowed" "turn_over" "turret" "wheeled" "with_gun" "vision_vehicle_low"}
	{able "emit_on_attack"}
	("armor_medium" args 1.0)

	{extender "shield"
			{on}
	}
	{component "shieldl1" {tags "shield"}}
	{component "shieldl2" {tags "shield"}}
	{component "shieldr1" {tags "shield"}}
	{component "shieldr2" {tags "shield"}}

	("crew_2_human")
	("board_animation"
		place(driver)
		board_begin(board_big-midcar_driver)
		board_end(seat_driver_car)
		base(doorleft)
	)
	("board_animation"
		place(commander)
		board_begin(board_big-midcar)
		board_end(seat_passenger)
		base(doorright)
	)

	{extender "enumerator"}

	{boarder
		{anm "gunner"
			{forward	{begin	"board_LowTank_stand"} {end "cannon_m5_gunlayer"}{base "door_guner"}}
			{reverse 	{end	"emit_tank_1_hold" 1}}
		}
                {anm "charger"
			{forward	{begin	"board_LowTank_stand"} {end "cannon_lg40_charger"}{base "door_guner"}}
			{reverse 	{end	"emit_tank_1_hold" 1}}
		}
	}
	
	("crew_human"		place(gunner)	bone(gunner)	door(emit3)		animation(gunner))
        ("crew_human"		place(charger)	bone(charger)	door(emit3)		animation(gunner))
	
	{placer
		{place "driver"		{group "crew"} {visor "driver"}}
		{place "commander"	{group "crew"} {visor "main"}}
                {place "charger"		{group "crew"} {visor "main"}}
		{place "gunner"		{group "crew"} {turnoff {targetable 0}}}

		}

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")

	{extender "inventory"
		{box
                {Size 7 7}
			{item "ammo bullet80_dm fg" 60}
			{item "repair_kit"}
		}
	}

	{Weaponry
		{place "nar"
			{weapon "80mm_b8b20a_x2" filling "bullet80_dm fg" 20}
			{foresight "foresight2"}
			{charger "driver"}
			{gunner "driver"}
			{barrels 32}
			{basic}
			{StationaryFiring}
			{SequentialAim 0}
		}
	}

	{mass 3100}


	{Chassis
		{Locomotion ("locomotion")
      		{Maxspeed 80}
			
                {StartTime  10}
                {BrakeTime  3} ; Время торможения с макс. скорости до 0 (в секундах)
		{StopTime   5} ; Время остановки после отключения двигателя с макс. скорости до 0 (в секундах)
		{Gears   0.25 0.86 1}  ; Передаточные коэф-ты коробки передач
		{RearGears  0.11 0.37}  ; Передаточные коэф-ты коробки передач
		{GearSwitchDelay 1.5} 
		)
	  		{maxSpeedAtMaxTurn 45}
      		{TurnRadius 3.7}
		}
		{FuelBag
			{volume 100 }	
			{rate	9 }   
			{remain 240 }
			{fuel "fuel"}
		}
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		{DisableMoveWhileFiring}
}
	{Extension "toyota_hilux_nurs2.mdl"}
	{volume "turret"
		{thickness 6}
	}
	{volume "engine"
		{thickness 8}
	}
  	(mod "game:escort"
    {props "escort_truck"}
	)
	{Volume "Body"
		{tags "body"}
		{component "body"}
		{thickness 12}    
	}
}
